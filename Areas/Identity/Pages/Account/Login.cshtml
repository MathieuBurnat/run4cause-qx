@page
@model LoginModel

@{
    ViewData["Title"] = "Se connecter";
}

<div class="d-flex flex-row justify-content-center">
    <h1>@ViewData["Title"]</h1>
</div>
<div class="d-flex flex-row justify-content-center">
    <form id="account" method="post" class="w-50">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-floating">
            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
            <label asp-for="Input.Email" class="form-label"></label>
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="form-floating">
            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
            <label asp-for="Input.Password" class="form-label"></label>
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div>
            <div class="checkbox">
                <label asp-for="Input.RememberMe" class="form-label">
                    <input class="form-check-input" asp-for="Input.RememberMe" />
                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                </label>
            </div>
        </div>
        <div class="d-flex flex-row justify-content-center">
            <button id="login-submit" type="submit" class="w-50 mt-2 btn btn-lg btn-primary">Connexion</button>
        </div>
        <div class="d-flex flex-row justify-content-between">
            <a class="btn btn-sm btn-secondary m-3 col-5" id="forgot-password" asp-page="./ForgotPassword">Mot de passe oublié ?</a>
            <a class="btn btn-sm btn-secondary m-3 col-5" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Inscription</a>
        </div>
    </form>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
